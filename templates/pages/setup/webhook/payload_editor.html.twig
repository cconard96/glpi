{% import 'components/form/fields_macros.html.twig' as fields %}
{% set params  = params ?? [] %}
{% set rand_field = rand|default(random()) %}

<form method="post" action="{{ item.getFormURL() }}">
   <div class="d-flex row">
      <div class="col-12">
         {{ fields.hiddenField('id', item.fields['id']) }}
         {{ fields.textareaField(
            'payload',
            item.fields['payload'],
            _n('Payload', 'Payloads', 1),
            {
               full_width: true,
               full_width_adapt_column: false,
               is_horizontal: false,
               enable_richtext: true,
               enable_images: false,
            }
         ) }}

         {% set payload_editor_field %}
            <div id="payload2" class="webhook-payload-editor w-100"></div>
         {% endset %}
         {{ fields.htmlField('payload2', payload_editor_field, '', {
            full_width: true,
         }) }}

         <style>
            .webhook-payload-editor {
               height: 300px;
            }
         </style>
         <script>
            $(() => {
                new GLPI.MonacoEditor('payload2', 'javascript', '');
            });
         </script>
      </div>
      <div class="col-12">
         {{ include('components/form/buttons.html.twig') }}
      </div>
   </div>
</form>
