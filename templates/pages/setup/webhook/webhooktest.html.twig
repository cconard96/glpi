{% extends "generic_show_form.html.twig" %}
{% import 'components/form/fields_macros.html.twig' as fields %}
{% set params  = params ?? [] %}
{% set rand_field = rand|default(random()) %}


{% block more_fields %}
    <div class="tab-content p-2 flex-grow-1 card " style="min-height: 150px">
        <div class="card-body d-flex flex-wrap">
            <div class="col-12 col-xxl-12 flex-column">
                <div class="d-flex flex-row flex-wrap flex-xl-nowrap">
                    <div class="row flex-row align-items-start flex-grow-1">
                        <div class="row flex-row">

                            {{ fields.dropdownArrayField(
                                'itemtype',
                                webhook.fields['itemtype'],
                                webhook.getGlpiItemtypes(),
                                __('Itemtype'),
                                field_options|merge({
                                    display_emptychoice: true,
                                    rand: rand_field,
                                })
                            ) }}

                            {{ fields.dropdownArrayField(
                                'event',
                                webhook.fields['event'],
                                webhook.getGlpiEventsList(item.fields['itemtype']),
                                _n('Event', 'Events', 1),
                                field_options|merge({
                                    display_emptychoice: true,
                                    container_id: 'show_event_field',
                                })
                            ) }}

                            {{ fields.dropdownArrayField(
                                'items_id',
                                '',
                                [],
                                _n('Item', 'Items', 1),
                                field_options|merge({
                                    display_emptychoice: true,
                                    container_id: 'show_items_field',
                                })
                            ) }}

                            {% do call('Ajax::updateItemOnSelectEvent', [
                                'dropdown_itemtype' ~ rand_field,
                                'show_event_field',
                                config('root_doc') ~ '/ajax/webhook.php',
                                {
                                'itemtype': '__VALUE__',
                                'action': 'get_events_from_itemtype'
                                }
                            ]) %}

                            {% do call('Ajax::updateItemOnSelectEvent', [
                                'dropdown_itemtype' ~ rand_field,
                                'show_items_field',
                                config('root_doc') ~ '/ajax/webhook.php',
                                {
                                'itemtype': '__VALUE__',
                                'action': 'get_items_from_itemtype'
                                }
                            ]) %}

                            {{ fields.nullField() }}

                            {% set cra_btn %}
                                <button class="btn btn-primary me-2" type="button" name="get_webhook_response" value="1">
                                    <i class="ti ti-bolt"></i>
                                    <span>{{ _x('button', 'See result') }}</span>
                                </button>
                            {% endset %}

                            {{ fields.htmlField(
                                '',
                                cra_btn,
                                '',
                                field_options
                            ) }}

                            <div class="row flex-row justify-content-center">
                                <div class="tab-content p-2 flex-grow-1 card" style="max-width: 80%">
                                    <pre class="bg-white text-dark" name="webhook_result">
                                    </pre>
                                </div>
                            </div>

                            <script>

                            $('button[name="get_webhook_response"]').click(function () {
                                itemtype = $('select[name="itemtype"]').val();
                                items_id = $('select[name="items_id"]').val();
                                event = $('select[name="event"]').val();

                                $.ajax({
                                    type: 'POST',
                                    url: '{{ path('/ajax/webhook.php') }}',
                                    data: {
                                        action: 'get_webhook_body',
                                        itemtype : itemtype,
                                        items_id: items_id,
                                        event: event
                                    },
                                    success: function(response) {
                                        $('pre[name="webhook_result"]').html(response);
                                    },
                                });

                            });
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

